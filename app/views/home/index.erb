<div class="outer-container">

  <div class="banner" data--200-top="opacity: 1;" data-top-bottom="opacity: 0;">

    <div class="banner__image" data-0="transform: translateY(0px);" data-top-bottom="transform: translateY(300px);"></div>
        <div class="banner__caption">
        <h1 class="logo">schmood</h1>
        <p>
            PLAYLISTS ACCORDING TO YA SCHMOOD!
        </p>
        </div>
    </div>

  <div data-0="background-color:rgb(255,255,255);" data-500="background-color:rgb(255, 230, 0);" class="happy_section">
    <%= link_to image_tag('happy_still.jpg'), spotify_login_path(user_mood: 'happy'), class: 'mood happy' %>
  </div>

  <div data-center="background-color:rgb(0, 0, 255);" data-500="background-color:rgb(255, 230, 0);" class="sad_section">
      <div class="col-sm-4 spacing justify-content-center"><%= link_to image_tag('issavibe_still.jpg'), spotify_login_path(user_mood: 'issavibe'), class: 'mood issavibe' %></div>
  </div>

  <div data-center="background-color:rgb(255, 0, 51);" data-500-bottom="background-color:rgb(0, 0, 255);" class="moody_section">
    <div class="col-sm-4 spacing justify-content-center"><%= link_to image_tag('moody_still.jpg'), spotify_login_path(user_mood: 'moody'), class: 'mood moody' %></div>
  </div>

</div>


